apiVersion: v1
kind: Pod
metadata:
  name: kube-apiserver
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - image: {{ clusterconfig['dockerregistry'] }}/kube-apiserver:{{ clusterconfig['apiserverversion'] }}
    name: apiserver-container
    command:
    - /usr/local/bin/kube-apiserver
    - --insecure-bind-address
    - {{ hostcofig['hostip'] }}
    - --storage-backend
    - {{ clusterconfig['storage-backend'] }}
    - --allow-privileged=true
    - --etcd-servers
    - {{ clusterconfig['etcd_cluster_ips_server'] }}
    - --service-cluster-ip-range
    - {{ clusterconfig['service-cluster-ip-range'] }}
    - --storage-media-type
    - application/json
    - --anonymous-auth=true
    - --cors-allowed-origins
    - .*
    resources:
      limits:
        memory: "1Gi"
        cpu: "1000m"
